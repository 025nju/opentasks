<resources xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="android:Theme.Holo.Light" />

    <style name="btn_remove">
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:src">@drawable/content_remove_light</item>
    </style>

    <style name="detail_label_line">
        <item name="android:background">@android:color/darker_gray</item>
    </style>

    <style name="DarkTextEditText" parent="DarkText">
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginLeft">0dp</item>
    </style>

    <style name="TextAppearance.EditTask_Spinner" parent="android:style/Widget.Holo.Light.Spinner">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#FF333333</item>
        <item name="android:layout_marginRight">12dp</item>
        <item name="android:layout_marginLeft">12dp</item>
    </style>

    <style name="CaldavProgressBar" parent="android:Widget.ProgressBar.Horizontal">
        <item name="android:layout_marginLeft">0dp</item>
    </style>

    <style name="CaldavSeekBar" parent="android:Widget.SeekBar">
        <item name="android:layout_marginLeft">0dp</item>
    </style>

    <style name="TasksExpandableListItem">
        <item name="android:background">?android:attr/activatedBackgroundIndicator</item>
    </style>

    <style name="TaskGroupText">
        <item name="android:textColor" tools:targetApi="14">@android:color/holo_blue_dark</item>
    </style>

</resources>