<?xml version="1.0" encoding="utf-8"?>
<org.dmfs.tasks.widget.TimeFieldEditor xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="12dip" >

    <include layout="@layout/editor_header" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/task_date_picker"
            style="@style/TextAppearance.EditTask_SpinnerButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="6" >
        </Button>

        <Button
            android:id="@+id/task_time_picker"
            style="@style/TextAppearance.EditTask_SpinnerButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3" >
        </Button>

        <ImageButton
            android:id="@+id/task_time_picker_remove"
            style="@style/btn_remove"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:layout_weight="1" >
        </ImageButton>
    </LinearLayout>

</org.dmfs.tasks.widget.TimeFieldEditor>