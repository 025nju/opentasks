<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppTheme" parent="android:Theme.Light">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="ActivityDefault">
        <item name="android:background">@android:color/white</item>
        <item name="android:textColor">@android:color/darker_gray</item>
    </style>

    <style name="CaldavProgressBar" parent="android:Widget.ProgressBar.Horizontal"></style>

    <style name="CaldavSeekBar" parent="android:Widget.SeekBar"></style>

    <style name="DarkText">
        <item name="android:textColor">#FF333333</item>
    </style>

    <style name="LabelText">
        <item name="android:textColor">@android:color/darker_gray</item>
    </style>

    <style name="TextAppearance.EditTask_Spinner" parent="android:style/Widget.Holo.Light.Spinner">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#FF333333</item>
        <item name="android:layout_marginRight">12dp</item>
        <item name="android:layout_marginLeft">12dp</item>
    </style>

    <style name="TextAppearance.EditTask_SpinnerButton" parent="TextAppearance.EditTask_Spinner">
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
    </style>

</resources>