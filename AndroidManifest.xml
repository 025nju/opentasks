<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.dmfs.tasks"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="15" />
	
    <uses-permission android:name="android.permission.READ_TASKS" />
    <uses-permission android:name="android.permission.WRITE_TASKS" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    
    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="org.dmfs.tasks.TaskListActivity"
            android:label="@string/title_task_list" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="org.dmfs.tasks.TaskDetailActivity"
            android:label="@string/title_task_detail"
            android:parentActivityName=".TaskListActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".TaskListActivity" />
        </activity>
        
        <provider
            android:name="org.dmfs.provider.tasks.TaskProvider"
            android:authorities="ms.jung.android.caldavtodo.provider"
            android:label="@string/provider_label"
            android:multiprocess="false" />
        
    </application>

</manifest>